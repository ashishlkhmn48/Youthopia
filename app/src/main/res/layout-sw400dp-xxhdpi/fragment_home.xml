<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_alignParentStart="true"
    android:layout_alignParentTop="true"
    android:background="@android:color/white"
    android:clickable="true">

    <Button
        android:id="@+id/register_button"
        android:layout_width="140dp"
        android:layout_height="80dp"
        android:layout_alignBaseline="@+id/album_button"
        android:layout_alignBottom="@+id/album_button"
        android:layout_toEndOf="@+id/facebook"
        android:background="@drawable/button_style"
        android:elevation="24dp"
        android:fontFamily="monospace"
        android:onClick="onRegisterClick"
        android:text="Register"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.191"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/recyclerView"
        app:layout_constraintVertical_bias="0.20999998" />

    <ImageView
        android:id="@+id/register_image"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_alignBottom="@+id/register_button"
        android:layout_marginBottom="8dp"
        android:layout_toEndOf="@+id/recyclerView"
        app:layout_constraintBottom_toBottomOf="@+id/register_button"
        app:layout_constraintHorizontal_bias="0.82"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/register_button"
        app:layout_constraintTop_toTopOf="@+id/register_button"
        app:layout_constraintVertical_bias="0.656"
        app:srcCompat="@drawable/register" />

    <ImageView
        android:id="@+id/scedule_image"
        android:layout_width="42dp"
        android:layout_height="42dp"
        android:layout_alignStart="@+id/register_image"
        android:layout_alignTop="@+id/schedule_button"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/schedule_button"
        app:layout_constraintHorizontal_bias="0.93"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/schedule_button"
        app:layout_constraintTop_toTopOf="@+id/schedule_button"
        app:layout_constraintVertical_bias="0.653"
        app:srcCompat="@drawable/schedule"
        tools:ignore="ContentDescription" />

    <Button
        android:id="@+id/schedule_button"
        android:layout_width="140dp"
        android:layout_height="80dp"
        android:layout_alignBottom="@+id/register_image"
        android:layout_toEndOf="@+id/recyclerView"
        android:background="@drawable/button_style"
        android:elevation="24dp"
        android:fontFamily="monospace"
        android:onClick="onScheduleClick"
        android:text="Schedule"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.19"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/register_button"
        app:layout_constraintVertical_bias="0.398" />

    <Button
        android:id="@+id/album_button"
        android:layout_width="140dp"
        android:layout_height="80dp"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/recyclerView"
        android:background="@drawable/button_style"
        android:elevation="24dp"
        android:fontFamily="monospace"
        android:onClick="onAlbumClick"
        android:text="Album"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.784"
        app:layout_constraintLeft_toRightOf="@+id/register_button"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/recyclerView"
        app:layout_constraintVertical_bias="0.20999998"
        tools:text="Album" />

    <ImageView
        android:id="@+id/imageView9"
        android:layout_width="42dp"
        android:layout_height="42dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/album_button"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintLeft_toRightOf="@+id/register_button"
        app:layout_constraintRight_toLeftOf="@+id/album_button"
        app:layout_constraintTop_toTopOf="@+id/album_button"
        app:layout_constraintVertical_bias="0.7"
        app:srcCompat="@drawable/album" />

    <ImageButton
        android:id="@+id/facebook_button"
        android:layout_width="70dp"
        android:layout_height="80dp"
        android:background="@drawable/button_style"
        android:elevation="2dp"
        android:onClick="onFacebookClick"
        android:padding="15dp"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.39"
        app:layout_constraintLeft_toRightOf="@+id/schedule_button"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/album_button"
        app:layout_constraintVertical_bias="0.4"
        app:srcCompat="@drawable/facebook" />

    <ImageButton
        android:id="@+id/instagram_button"
        android:layout_width="70dp"
        android:layout_height="80dp"
        android:background="@drawable/button_style"
        android:elevation="2dp"
        android:onClick="onInstagramClick"
        android:padding="13dp"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.15"
        app:layout_constraintLeft_toRightOf="@+id/facebook_button"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/album_button"
        app:layout_constraintVertical_bias="0.4"
        app:srcCompat="@drawable/instagram" />

    <ImageView
        android:id="@+id/imageView12"
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:layout_constraintBottom_toBottomOf="@+id/facebook_button"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintLeft_toRightOf="@+id/schedule_button"
        app:layout_constraintRight_toLeftOf="@+id/facebook_button"
        app:layout_constraintTop_toTopOf="@+id/facebook_button"
        app:layout_constraintVertical_bias="0.514"
        app:srcCompat="@drawable/share" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="0dp"
        android:layout_height="300dp"
        android:layout_alignParentStart="true"
        android:layout_marginEnd="2dp"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="2dp"
        android:layout_marginStart="2dp"
        android:layout_marginTop="2dp"
        android:background="@android:color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

</android.support.constraint.ConstraintLayout>